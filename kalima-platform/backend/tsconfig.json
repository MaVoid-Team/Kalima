{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": ".",               
    "outDir": "dist",

    "strict": false,              

    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "routes/**/*",
    "controllers/**/*",
    "models/**/*",
    "middleware/**/*",
    "*.ts",
    "*.js"
  ],
  "exclude": ["node_modules", "dist"]
}