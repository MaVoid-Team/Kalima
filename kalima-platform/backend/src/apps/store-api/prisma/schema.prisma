generator client {
  provider        = "prisma-client-js"
  output          = "../../generated/prisma"
  previewFeatures = ["driverAdapters", "partialIndexes"]
}

datasource db {
  provider = "postgresql"
}

model auth_identities {
  id               Int                @id @default(autoincrement())
  user_id          Int
  provider         auth_provider_enum
  provider_user_id String             @db.VarChar
  provider_email   String?            @db.VarChar
  users            users              @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([provider, provider_user_id])
}

model user_analytics {
  user_id                     Int       @id
  views                       Int?      @default(0)
  total_spent                 Decimal?  @default(0) @db.Decimal(14, 2)
  number_of_purchases         Int?      @default(0)
  successful_invites          Int?      @default(0)
  monthly_confirmed_count     Int?      @default(0)
  last_confirmed_count_update DateTime? @default(now()) @db.Timestamptz(6)
  users                       users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model user_roles {
  id      Int         @id @default(autoincrement())
  user_id Int
  portal  portal_enum
  role    role_enum
  users   users       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([user_id, portal, role])
}

model users {
  id                        Int                        @id @default(autoincrement())
  mongo_id                  String?                    @unique
  name                      String                     @db.VarChar
  email                     String?                    @unique @db.VarChar
  password                  String?                    @db.VarChar
  phone                     String?                    @db.VarChar
  gender                    gender_enum?
  is_email_verified         Boolean?                   @default(false)
  email_verified_at         DateTime?                  @db.Timestamptz(6)
  created_at                DateTime?                  @default(now()) @db.Timestamptz(6)
  updated_at                DateTime?                  @default(now()) @db.Timestamptz(6)
  secondary_phone           String?                    @db.VarChar
  role                      role_enum?
  profile_pic_url           String?
  password_changed_at       DateTime?                  @db.Timestamp(6)
  confirmed                 Boolean?                   @default(false)
  hasPromoCode              Boolean?                   @default(false)
  hasUsedPromoCode          Boolean?                   @default(false)
  assistants                assistants[]
  auth_identities           auth_identities[]
  email_verification_tokens email_verification_tokens?
  lecturers                 lecturers?
  parents                   parents?
  password_reset_tokens     password_reset_tokens?
  refresh_tokens            refresh_tokens[]
  social_media              social_media[]
  students                  students?
  teachers                  teachers?
  teaches_at                teaches_at[]
  user_analytics            user_analytics?
  user_roles                user_roles[]

  @@index([mongo_id], map: "ix_users_mongo_id")
}

model refresh_tokens {
  id         Int       @id @default(autoincrement())
  user_id    Int
  token_hash String    @db.VarChar
  revoked    Boolean?  @default(false)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  expires_at DateTime  @db.Timestamptz(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([user_id], map: "ix_refresh_tokens_user")
}

model assistants {
  id               Int       @id @default(autoincrement())
  user_id          Int
  lecturer_user_id Int
  lecturers        lecturers @relation(fields: [lecturer_user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
  users            users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model government {
  id       Int        @id @default(autoincrement())
  title    String     @unique @db.VarChar(255)
  active   Boolean?   @default(true)
  parents  parents[]
  students students[]
  teachers teachers[]
  zones    zones[]
}

model lecturers {
  user_id    Int          @id
  bio        String?
  expertise  String?
  assistants assistants[]
  users      users        @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model levels {
  id       Int        @id @default(autoincrement())
  title    String     @unique @db.VarChar(255)
  active   Boolean?   @default(true)
  students students[]
}

model parent_children {
  id              Int      @id @default(autoincrement())
  parent_user_id  Int
  student_user_id Int
  parents         parents  @relation(fields: [parent_user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
  students        students @relation(fields: [student_user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([parent_user_id, student_user_id])
}

model parents {
  user_id         Int               @id
  government_id   Int?
  zone_id         Int?
  parent_children parent_children[]
  government      government?       @relation(fields: [government_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users           users             @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  zones           zones?            @relation(fields: [zone_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model sites {
  id           Int            @id @default(autoincrement())
  title        String         @unique @db.VarChar(255)
  active       Boolean?       @default(true)
  social_media social_media[]
}

model social_media {
  id              Int      @id @default(autoincrement())
  teacher_user_id Int
  site_id         Int?
  url             String
  active          Boolean? @default(true)
  sites           sites?   @relation(fields: [site_id], references: [id], onUpdate: NoAction)
  users           users    @relation(fields: [teacher_user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model students {
  user_id             Int               @id
  level_id            Int?
  government_id       Int?
  zone_id             Int?
  parent_phone_number String?           @db.VarChar(255)
  sequenced_id        Int?
  faction             String?           @db.VarChar(255)
  parent_children     parent_children[]
  government          government?       @relation(fields: [government_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  levels              levels?           @relation(fields: [level_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users               users             @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  zones               zones?            @relation(fields: [zone_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model subjects {
  id       Int        @id @default(autoincrement())
  title    String     @unique @db.VarChar(255)
  active   Boolean?   @default(true)
  teachers teachers[]
}

model teachers {
  user_id        Int         @id
  serial         String?     @unique @db.VarChar(255)
  is_primary     Boolean?    @default(false)
  is_preparatory Boolean?    @default(false)
  is_secondary   Boolean?    @default(false)
  government_id  Int?
  zone_id        Int?
  subject_id     Int?
  government     government? @relation(fields: [government_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subjects       subjects?   @relation(fields: [subject_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users          users       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  zones          zones?      @relation(fields: [zone_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model teaches_at {
  id            Int                 @id @default(autoincrement())
  user_id       Int
  location_name String?             @db.VarChar(255)
  location_type location_type_enum?
  active        Boolean?            @default(true)
  users         users               @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model zones {
  id            Int        @id @default(autoincrement())
  title         String     @db.VarChar(255)
  government_id Int
  active        Boolean?   @default(true)
  parents       parents[]
  students      students[]
  teachers      teachers[]
  government    government @relation(fields: [government_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([title, government_id])
}

model email_verification_tokens {
  id         Int       @id @default(autoincrement())
  user_id    Int       @unique
  token_hash String    @db.VarChar
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  expires_at DateTime  @db.Timestamptz(6)
  used_at    DateTime? @db.Timestamptz(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([token_hash], map: "ix_email_verification_tokens_hash")
}

model password_reset_tokens {
  id         Int       @id @default(autoincrement())
  user_id    Int       @unique
  token_hash String    @db.VarChar
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  expires_at DateTime  @db.Timestamptz(6)
  used_at    DateTime? @db.Timestamptz(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([token_hash], map: "ix_password_reset_tokens_hash")
}

enum auth_provider_enum {
  local
  firebase
  google
  facebook
}

enum gender_enum {
  male
  female
}

enum portal_enum {
  store
  academy
}

enum role_enum {
  Admin
  SubAdmin
  Teacher
  Student
  Parent
  Lecturer
  Moderator
  Assistant
}

enum location_type_enum {
  School
  Center
}
